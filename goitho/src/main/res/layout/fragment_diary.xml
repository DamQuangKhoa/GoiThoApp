<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_toolbar"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout_back"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/nav_user"
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="@dimen/size_40dp"
                    android:src="@drawable/ic_person_white"
                    android:padding="@dimen/distance_5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_diary"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_17sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txt_add"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_40dp"
                    android:text="@string/text_add"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_17sp"
                    android:padding="@dimen/distance_5dp"/>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_marginTop="@dimen/distance_10dp"
            android:layout_marginBottom="@dimen/distance_10dp"
            android:layout_marginStart="@dimen/distance_10dp"
            android:layout_marginEnd="@dimen/distance_10dp">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="@dimen/size_120dp"
                android:layout_height="@dimen/size_30dp"
                android:spinnerMode="dropdown"
                android:layout_marginEnd="@dimen/distance_5dp"
                />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_40dp"
                android:layout_weight="1"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/brown"
                android:hint="@string/text_search"
                android:textColorHint="@color/smoke"
                android:background="@drawable/bg_round_corner_button_white_background"
                android:drawableEnd="@drawable/places_ic_search"
                android:drawableStart="@drawable/ic_calender"
                android:drawablePadding="@dimen/distance_5dp"
                android:paddingStart="@dimen/distance_15dp"
                android:paddingEnd="@dimen/distance_15dp"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_diary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_left"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>

            <LinearLayout
                android:id="@+id/ll_logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="@dimen/size_30dp"
                    android:src="@drawable/ic_logout"
                    android:layout_marginStart="@dimen/distance_20dp"/>
                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="@string/text_logout"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_17sp"
                    android:textAllCaps="false"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="@dimen/distance_10dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>