<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whiteFifteen">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_toolbar"
        android:background="@drawable/bg_toolbar"
        android:orientation="horizontal"
        app:contentInsetEnd="@dimen/promotion_0dp"
        app:contentInsetLeft="@dimen/promotion_0dp"
        app:contentInsetRight="@dimen/promotion_0dp"
        app:contentInsetStart="@dimen/promotion_0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/distance_10dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/txt_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/text_add_id_promotion"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rl_detail_promotion"
                android:layout_width="@dimen/md_icon_max_size"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_detaik_promotion"
                    android:layout_width="@dimen/mr_controller_volume_group_list_item_icon_size"
                    android:layout_height="@dimen/size_40dp"
                    android:src="@mipmap/ic_call_real" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_detail_promotion2"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp">

                <ImageView
                    android:id="@+id/img_detail_promotion"
                    android:layout_width="@dimen/mr_controller_volume_group_list_item_icon_size"
                    android:layout_height="@dimen/size_40dp"
                    android:src="@mipmap/ic_call" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/lv_id_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/distance_8dp"
        android:paddingEnd="@dimen/distance_8dp"
        android:layout_marginTop="16dp"
        android:divider="@null"
        android:dividerHeight="@dimen/distance_18dp" />
</LinearLayout>
