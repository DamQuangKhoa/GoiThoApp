<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/distance_10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_15dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/distance_15dp"
            android:layout_marginStart="@dimen/distance_15dp"
            android:text="@string/text_enter_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/distance_8dp"
            android:background="@color/whiteNineteen" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/distance_15dp"
            android:layout_marginStart="@dimen/distance_15dp"
            android:layout_marginTop="@dimen/distance_2dp"
            android:gravity="top|left"
            android:id="@+id/et_content"
            android:text="Lắp hai điều hoà tầng ba, bốn. Bảo dưỡng một điều hoà tầng 1"
            android:lines="5"
            android:background="@color/whiteThree"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/distance_8dp"
            android:background="@color/whiteNineteen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/txt_close"
                android:text="@string/text_close"
                android:textColor="@color/lightNavyTwo"
                android:textSize="@dimen/text_14sp" />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/whiteNineteen"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/txt_save"
                android:text="@string/text_save"
                android:paddingBottom="@dimen/distance_8dp"
                android:paddingTop="@dimen/distance_8dp"
                android:textColor="@color/lightNavyTwo"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>