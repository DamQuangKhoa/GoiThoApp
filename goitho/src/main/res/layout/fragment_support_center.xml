<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteFive"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_toolbar"
        android:background="@drawable/bg_toolbar"
        android:orientation="horizontal"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:padding="@dimen/distance_10dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/txt_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/text_support_center"
                android:textColor="@color/whiteThree"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call"
                android:layout_marginEnd="@dimen/distance_21dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/distance_9dp"
                android:src="@drawable/ic_chat" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="@dimen/distance_18dp"
        android:paddingStart="@dimen/distance_18dp"
        android:paddingTop="@dimen/distance_12dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/distance_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/distance_15dp"
                android:paddingEnd="@dimen/distance_20dp"
                android:paddingStart="@dimen/distance_20dp"
                android:paddingTop="@dimen/distance_11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_ca" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/distance_8dp"
                        android:text="@string/text_customer_care"
                        android:textColor="@color/lightNavyTwo"
                        android:textSize="@dimen/text_14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/distance_3dp"
                    android:background="@color/pinkishGreyFive" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_10dp"
                    android:text="Tiếp nhận, hỗ trợ các thông tin về đơn hàng, khách hàng, thanh toán chi phí"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14sp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:id="@+id/layout_order_booking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_13dp"
                    android:background="@drawable/bg_round_corner_button_blue_background"
                    android:gravity="center"
                    android:paddingBottom="@dimen/distance_19dp"
                    android:paddingEnd="@dimen/distance_29dp"
                    android:paddingStart="@dimen/distance_15dp"
                    android:paddingTop="@dimen/distance_17dp">


                    <TextView
                        android:id="@+id/txt_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/distance_16dp"
                        android:text="@string/text_chat"
                        android:textColor="@color/whiteThree"
                        android:textSize="@dimen/text_14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/size_7dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/distance_8dp"
                        android:layout_toRightOf="@+id/txt_title1"
                        android:src="@drawable/ic_next_home" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_10dp"
            app:cardCornerRadius="@dimen/distance_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/distance_15dp"
                android:paddingEnd="@dimen/distance_20dp"
                android:paddingStart="@dimen/distance_20dp"
                android:paddingTop="@dimen/distance_11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_ca" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/distance_8dp"
                        android:text="@string/text_question_library"
                        android:textColor="@color/lightNavyTwo"
                        android:textSize="@dimen/text_14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/distance_3dp"
                    android:background="@color/pinkishGreyFive" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_10dp"
                    android:text="Các câu hỏi thường gặp về chính sách, hoạt động, hỗ trợ của Gọi Thợ."
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14sp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/distance_13dp"
                    android:id="@+id/layout_faq"
                    android:background="@drawable/bg_round_corner_button_blue_background"
                    android:gravity="center"
                    android:paddingBottom="@dimen/distance_19dp"
                    android:paddingEnd="@dimen/distance_29dp"
                    android:paddingStart="@dimen/distance_15dp"
                    android:paddingTop="@dimen/distance_17dp">


                    <TextView
                        android:id="@+id/txt_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/distance_16dp"
                        android:text="@string/text_access_faq"
                        android:textColor="@color/whiteThree"
                        android:textSize="@dimen/text_14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/size_7dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/distance_8dp"
                        android:layout_toRightOf="@+id/txt_title2"
                        android:src="@drawable/ic_next_home" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_11dp"
            android:background="@drawable/bg_round_corner_button_yellow_radius_10_background"
            android:paddingBottom="@dimen/distance_16dp"
            android:paddingEnd="@dimen/distance_29dp"
            android:paddingStart="@dimen/distance_22dp"
            android:paddingTop="@dimen/distance_16dp">

            <ImageView
                android:id="@+id/img_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_order_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/distance_16dp"
                android:text="@string/text_call_hotline"
                android:textColor="@color/whiteThree"
                android:textSize="@dimen/text_15sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>