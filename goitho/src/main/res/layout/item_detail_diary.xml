<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="@dimen/distance_10dp"
    android:layout_marginStart="@dimen/distance_10dp"
    android:layout_marginEnd="@dimen/distance_10dp">

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="@dimen/size_40dp"
        android:layout_height="@dimen/size_40dp"
        android:src="@drawable/ic_delete"
        android:paddingStart="@dimen/distance_5dp"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khoai lang - PRODUCT001"
                android:textColor="@color/text_grey_dark"
                android:textSize="@dimen/text_17sp"
                android:textStyle="bold"
                android:background="@drawable/bg_round_corner_top"
                android:gravity="center"
                android:paddingTop="@dimen/distance_10dp"
                android:paddingBottom="@dimen/distance_10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_round_corner_bottom"
                android:paddingTop="@dimen/distance_5dp"
                android:paddingBottom="@dimen/distance_5dp">

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_15sp"/>

                <TextView
                    android:id="@+id/txt_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_15sp"/>

                <TextView
                    android:id="@+id/txt_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghí chú: "
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_15sp"/>

                <TextView
                    android:id="@+id/txt_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem lịch sử cập nhật"
                    android:textColor="@color/wallet_holo_blue_light"
                    android:textSize="@dimen/text_15sp"
                    android:textStyle="bold|italic"
                    android:visibility="gone"/>

            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_more"
            android:layout_gravity="bottom|right"
            android:padding="@dimen/distance_5dp"
            />

    </FrameLayout>


    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="@dimen/size_40dp"
        android:layout_height="@dimen/size_40dp"
        android:src="@drawable/ic_edit_blue"
        android:padding="@dimen/distance_5dp"
        android:layout_marginEnd="@dimen/distance_5dp"
        android:visibility="gone"/>
</LinearLayout>