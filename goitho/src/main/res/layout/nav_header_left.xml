<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_user"
            android:layout_width="@dimen/size_80dp"
            android:layout_height="@dimen/size_80dp"
            android:src="@drawable/user"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/distance_55dp"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@id/img_user"
            android:layout_marginLeft="@dimen/distance_5dp"
            android:layout_marginRight="@dimen/distance_5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/distance_5dp"/>

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_15sp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/distance_3dp"
            android:layout_marginLeft="@dimen/distance_5dp"
            android:layout_marginRight="@dimen/distance_5dp"
            android:layout_below="@id/txt_name"
            android:layout_centerHorizontal="true"/>

        <RatingBar
            android:id="@+id/rb_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_address"
            android:theme="@style/RatingBar"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_centerHorizontal="true"
            android:numStars="5"
            android:rating="3.7"
            android:isIndicator="true"
            android:layout_marginTop="@dimen/distance_10dp"
            android:layout_marginBottom="@dimen/distance_15dp"/>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:src="@drawable/ic_close"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/distance_15dp"
            android:layout_marginEnd="@dimen/distance_15dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/ll_certificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/distance_5dp">

        <ImageView
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:src="@drawable/ic_certificate"
            android:layout_marginStart="@dimen/distance_10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_info_certificate"
            android:textColor="@color/white"
            android:textSize="@dimen/text_17sp"
            android:layout_margin="@dimen/distance_5dp"
            android:paddingStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/distance_5dp">

        <ImageView
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:src="@drawable/ic_profile"
            android:layout_marginStart="@dimen/distance_10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_profile"
            android:textColor="@color/white"
            android:textSize="@dimen/text_17sp"
            android:layout_margin="@dimen/distance_5dp"
            android:paddingStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_farmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/distance_5dp">

        <ImageView
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:src="@drawable/ic_list"
            android:layout_marginStart="@dimen/distance_10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_list_farmer"
            android:textColor="@color/white"
            android:textSize="@dimen/text_17sp"
            android:layout_margin="@dimen/distance_5dp"
            android:paddingStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/distance_10dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:src="@drawable/ic_sms"
            android:layout_marginStart="@dimen/distance_10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_message"
            android:textColor="@color/white"
            android:textSize="@dimen/text_17sp"
            android:layout_margin="@dimen/distance_5dp"
            android:paddingStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/distance_10dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:src="@drawable/ic_notification"
            android:layout_marginStart="@dimen/distance_10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_noti"
            android:textColor="@color/white"
            android:textSize="@dimen/text_17sp"
            android:layout_margin="@dimen/distance_5dp"
            android:paddingStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/distance_10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp"
            android:src="@drawable/ic_setting"

            android:layout_marginStart="@dimen/distance_10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_setting"
            android:textColor="@color/white"
            android:textSize="@dimen/text_17sp"
            android:layout_margin="@dimen/distance_5dp"
            android:paddingStart="10dp"/>

    </LinearLayout>



</LinearLayout>