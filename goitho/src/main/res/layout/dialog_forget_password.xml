<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/size_310dp"
        android:layout_height="@dimen/size_312dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="@dimen/size_280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_content_forget_pass"
                android:textColor="@color/lightNavy"
                android:textSize="@dimen/text_12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_24dp"
                android:text="@string/text_username"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="@dimen/size_280dp"
                android:layout_height="@dimen/size_36dp"
                android:layout_marginTop="@dimen/distance_2dp"
                android:background="@drawable/bg_round_corner_edittext_white_background"
                android:ellipsize="end"
                android:paddingLeft="@dimen/distance_8dp"
                android:paddingRight="@dimen/distance_8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_24dp"
                android:text="@string/text_phone"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="@dimen/size_280dp"
                android:layout_height="@dimen/size_36dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/distance_2dp"
                android:background="@drawable/bg_round_corner_edittext_white_background"
                android:ellipsize="end"
                android:paddingLeft="@dimen/distance_8dp"
                android:paddingRight="@dimen/distance_8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textSize="@dimen/text_14sp" />

            <Button
                android:id="@+id/btn_get_pass"
                android:layout_width="@dimen/size_280dp"
                android:layout_height="@dimen/size_43dp"
                android:layout_marginTop="@dimen/distance_24dp"
                android:background="@drawable/bg_round_corner_button_blue_stroke_background"
                android:text="@string/text_get_pass"
                android:textColor="@color/whiteThree"
                android:textSize="@dimen/text_14sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>