<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_ice_blue"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_76dp"
        android:background="@drawable/bg_toolbar"
        android:orientation="horizontal"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/distance_20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:padding="@dimen/distance_10dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/txt_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/text_toolbar_profile"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14sp" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_16dp"
            android:text="@string/text_content_add_profile"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_24dp"
            android:id="@+id/layoutCapture"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/distance_16dp"
                android:text="@string/text_choose_avatar"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="@dimen/size_310dp"
                android:layout_height="@dimen/size_36dp"
                android:background="@drawable/bg_round_corner_edittext_white_six_background"
                android:ellipsize="end"
                android:paddingLeft="@dimen/distance_8dp"
                android:layout_marginTop="@dimen/distance_2dp"
                android:paddingRight="@dimen/distance_8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_16dp"
                android:text="@string/text_address"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/et_address1"
                android:layout_width="@dimen/size_310dp"
                android:layout_height="@dimen/size_36dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_round_corner_edittext_white_six_background"
                android:ellipsize="end"
                android:paddingLeft="@dimen/distance_8dp"
                android:paddingRight="@dimen/distance_8dp"
                android:layout_marginTop="@dimen/distance_2dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_16dp"
                android:text="@string/text_address_2"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/et_address2"
                android:layout_width="@dimen/size_310dp"
                android:layout_height="@dimen/size_36dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_round_corner_edittext_white_six_background"
                android:ellipsize="end"
                android:paddingLeft="@dimen/distance_8dp"
                android:paddingRight="@dimen/distance_8dp"
                android:layout_marginTop="@dimen/distance_2dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textSize="@dimen/text_14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_16dp"
                android:text="@string/text_email"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="@dimen/size_310dp"
                android:layout_height="@dimen/size_36dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_round_corner_edittext_white_six_background"
                android:ellipsize="end"
                android:paddingLeft="@dimen/distance_8dp"
                android:paddingRight="@dimen/distance_8dp"
                android:layout_marginTop="@dimen/distance_2dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textSize="@dimen/text_14sp" />
            <Button
                android:id="@+id/btn_complete"
                android:layout_width="@dimen/size_310dp"
                android:layout_height="@dimen/size_43dp"
                android:layout_marginTop="@dimen/distance_24dp"
                android:background="@drawable/bg_round_corner_button_blue_stroke_background"
                android:text="@string/text_complete"
                android:textColor="@color/whiteThree"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>