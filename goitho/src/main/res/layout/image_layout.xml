<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background"
    android:gravity="center">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/distance_5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/distance_10dp">
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/size_130dp"
            android:layout_height="wrap_content"
            android:text="@string/text_save"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="@dimen/distance_10dp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/distance_10dp"
            android:layout_marginStart="@dimen/distance_20dp"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/size_130dp"
            android:layout_height="wrap_content"
            android:text="@string/text_cancel"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/distance_10dp"
            android:gravity="center"
            android:layout_marginStart="@dimen/distance_10dp"
            android:layout_marginEnd="@dimen/distance_20dp"/>
    </LinearLayout>


</LinearLayout>