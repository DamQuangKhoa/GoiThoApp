<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_toolbar"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:src="@drawable/ic_back"
                android:padding="@dimen/distance_5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_add_action"
                android:textColor="@color/white"
                android:textSize="@dimen/text_17sp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:padding="@dimen/distance_5dp"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_action_for_product"
        android:layout_gravity="center"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/text_15sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/distance_10dp"/>
    <TextView
        android:id="@+id/txt_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/text_grey_dark"
        android:textSize="@dimen/text_15sp"
        android:layout_marginTop="@dimen/distance_10dp"/>

    <EditText
        android:id="@+id/et_action"
        android:layout_width="@dimen/size_200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_grey"
        android:backgroundTint="@color/smoke"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/distance_15dp"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="@dimen/size_200dp"
        android:layout_height="@dimen/size_50dp"
        android:text="@string/text_add"
        android:textSize="@dimen/text_15sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/bg_button_green"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/distance_15dp"/>
</LinearLayout>