<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView  android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_register"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="@dimen/size_350dp"
                android:layout_height="@dimen/size_454dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/distance_8dp"
                android:layout_marginRight="@dimen/distance_8dp"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:layout_width="@dimen/size_319dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/distance_16dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_edit_account"
                        android:textAllCaps="true"
                        android:textColor="@color/lightNavyThree"
                        android:textSize="@dimen/text_18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance_8dp"
                        android:text="@string/text_content_edit"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance_24dp"
                        android:text="@string/text_username"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp" />

                    <EditText
                        android:id="@+id/et_username"
                        android:layout_width="@dimen/size_319dp"
                        android:layout_height="@dimen/size_36dp"
                        android:layout_marginTop="@dimen/distance_2dp"
                        android:background="@drawable/bg_round_corner_edittext_white_six_background"
                        android:ellipsize="end"
                        android:paddingLeft="@dimen/distance_8dp"
                        android:paddingRight="@dimen/distance_8dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance_24dp"
                        android:text="@string/text_password"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp" />

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="@dimen/size_319dp"
                        android:layout_height="@dimen/size_36dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/distance_2dp"
                        android:background="@drawable/bg_round_corner_edittext_white_six_background"
                        android:ellipsize="end"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/distance_8dp"
                        android:paddingRight="@dimen/distance_8dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance_24dp"
                        android:text="@string/text_phone"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="@dimen/size_319dp"
                        android:layout_height="@dimen/size_40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_round_corner_edittext_white_six_background"
                        android:ellipsize="end"
                        android:inputType="phone"
                        android:layout_marginTop="@dimen/distance_2dp"
                        android:paddingLeft="@dimen/distance_16dp"
                        android:paddingRight="@dimen/distance_16dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/text_14sp" />


                    <Button
                        android:id="@+id/btn_update"
                        android:layout_width="@dimen/size_310dp"
                        android:layout_height="@dimen/size_43dp"
                        android:layout_marginTop="@dimen/distance_24dp"
                        android:background="@drawable/bg_round_corner_button_yellow_background"
                        android:text="@string/text_update"
                        android:textColor="@color/whiteThree"
                        android:textSize="@dimen/text_14sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo" />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_back"
        android:text="@string/text_back"
        android:textSize="@dimen/text_16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/distance_16dp"
        android:textColor="@color/whiteThree"
        android:layout_below="@+id/layout_register"/>

</RelativeLayout>