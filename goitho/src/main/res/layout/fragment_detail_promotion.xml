<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:background="@drawable/bg_toolbar"
        android:orientation="horizontal"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/distance_20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:padding="@dimen/distance_10dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/txt_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="Khuyến mãi"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rl_detail_promotion"
                android:layout_width="@dimen/md_icon_max_size"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_detaik_promotion"
                    android:layout_width="@dimen/mr_controller_volume_group_list_item_icon_size"
                    android:layout_height="@dimen/size_40dp"
                    android:src="@mipmap/ic_call_real" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_detail_promotion2"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp">

                <ImageView
                    android:id="@+id/img_detail_promotion"
                    android:layout_width="@dimen/mr_controller_volume_group_list_item_icon_size"
                    android:layout_height="@dimen/size_40dp"
                    android:src="@mipmap/ic_call" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_170dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        app:srcCompat="@drawable/img_promotion" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/promotion_left_13dp"
        android:layout_marginStart="@dimen/promotion_23dp"
        android:layout_marginTop="@dimen/promotion_23dp"
        android:text="@string/promotion_welcome"
        android:textColor="@color/com_facebook_button_background_color"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/txtPromotion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/promotion_left_13dp"
        android:layout_marginStart="@dimen/promotion_23dp"
        android:layout_marginTop="@dimen/promotion_10dp"
        android:text="@string/promotion_text"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/promotion_23dp"
        android:layout_marginTop="@dimen/promotion_left_13dp"
        android:text="@string/promotion_expired"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/promotion_left_13dp"
        android:layout_marginStart="@dimen/promotion_23dp"
        android:layout_marginTop="@dimen/promotion_20dp"
        android:text="@string/promotion_rules"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginBottom="@dimen/promotion_8dp"
        android:layout_marginEnd="@dimen/promotion_8dp"
        android:layout_marginStart="@dimen/promotion_23dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_round_corner_button_blue_background"
        android:drawableStart="@mipmap/ic_supporter"
        android:text="@string/promotion_button_text"
        android:textAlignment="textStart"
        android:textColor="@color/button_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/promotion_left_13dp"
        android:layout_marginStart="@dimen/promotion_23dp"
        android:layout_marginTop="@dimen/promotion_10dp"
        android:text="@string/promotion_text_example"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/promotion_left_13dp"
        android:layout_marginStart="@dimen/promotion_8dp"
        android:layout_marginTop="@dimen/promotion_left_13dp"
        android:text="@string/promotion_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="@dimen/promotion_0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/promotion_left_13dp"
        android:layout_marginStart="@dimen/promotion_23dp"
        android:layout_marginTop="@dimen/promotion_8dp"
        android:text="Tặng 50.000đ cho tài khoản đăng ký mới."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPromotion" />

</android.support.constraint.ConstraintLayout>
